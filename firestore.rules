rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user document exists and get role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserRole() == 'admin';
    }
    
    // Helper function to check if user is customer
    function isCustomer() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserRole() == 'customer';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all users
      allow read: if isAdmin();
      // Only admins can create/update users
      allow create, update: if isAdmin();
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Projects collection
    match /projects/{projectId} {
      // Anyone can read portfolio projects (public)
      allow read: if resource.data.isPortfolio == true;
      
      // Customers can read their own projects
      allow read: if isCustomer() && 
                     resource.data.customerId == request.auth.uid;
      
      // Admins can read all projects (including collection queries)
      allow read: if isAdmin();
      
      // Only admins can create, update, or delete projects
      allow create, update, delete: if isAdmin();
    }
    
    // Quotes collection
    match /quotes/{quoteId} {
      // Admins can read all quotes (needed for collection queries)
      allow read: if isAdmin();
      
      // Users can read their own quotes
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Anyone authenticated can create quotes
      allow create: if isAuthenticated();
      
      // Only admins can update or delete quotes
      allow update, delete: if isAdmin();
    }
  }
}

